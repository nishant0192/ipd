<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Exercise Icon -->
        <ImageView
            android:id="@+id/workout_exercise_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="8dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_bicep"
            android:contentDescription="Exercise icon" />

        <!-- Details Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- First Row: Exercise Name -->
            <TextView
                android:id="@+id/workout_exercise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bicep Curl"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Second Row: Date -->
            <TextView
                android:id="@+id/workout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apr 20, 2025 â€¢ 10:30 AM"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />

            <!-- Third Row: Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Reps -->
                <TextView
                    android:id="@+id/workout_rep_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 reps"
                    android:textSize="14sp" />

                <!-- Duration -->
                <TextView
                    android:id="@+id/workout_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:30"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp" />

                <!-- Score -->
                <TextView
                    android:id="@+id/workout_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="92/100"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_grade"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:tint="@color/mp_color_primary"
            android:contentDescription="View details" />
    </LinearLayout>
</androidx.cardview.widget.CardView>